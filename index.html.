      <div class="controls">
        <button class="control-btn" data-msg="simple">Simple</button>
        <button class="control-btn" data-msg="emotional">Emotional</button>
        <button class="control-btn" data-msg="funny">Funny</button>
        <button class="control-btn" data-msg="poem">Poem</button>
        <button class="control-btn" id="copyBtn">Copy wish</button>
        <button class="control-btn" id="downloadBtn">Download as PNG</button>
        <input id="nameInput" placeholder="Type her name (optional)" style="margin-left:8px;padding:8px 10px;border-radius:10px;border:1px solid rgba(255,255,255,0.04);background:transparent;color:inherit" />
