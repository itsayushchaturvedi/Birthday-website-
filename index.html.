  <script>
    const messages = {
      simple: "Happy Birthday, sis! Wishing you all the happiness and success this year.",
      emotional: "To my amazing sister‚Äîmay your dreams come true this year. Love you forever.",
      funny: "HBD to my sister ‚Äî older, wiser, and still stealing my fries. Enjoy your day! üòÇ",
      poem: "Roses are red, violets are blue, there's no sister as sweet as you. Happy Birthday!"
    };

    const wishBox = document.getElementById('wishBox');
    const nameInput = document.getElementById('nameInput');
    const sisterName = document.getElementById('sisterName');

    document.querySelectorAll('.control-btn[data-msg]').forEach(btn=>{
      btn.addEventListener('click', ()=>{
        const key = btn.getAttribute('data-msg');
        wishBox.textContent = messages[key];
      });
    });

    document.getElementById('copyBtn').addEventListener('click', async ()=>{
      const text = wishBox.textContent.trim();
      try{
        await navigator.clipboard.writeText(text);
        alert('Wish copied! Paste it anywhere to share.');
      }catch(e){
        alert('Could not copy ‚Äî select the text and copy manually.');
      }
    });

    // update name live
    nameInput.addEventListener('input', ()=>{
      const v = nameInput.value.trim();
      sisterName.textContent = v || 'Sister';
    });

    // download simple PNG using html2canvas-like approach (fallback)
    document.getElementById('downloadBtn').addEventListener('click', ()=>{
      alert('To download as image: take a screenshot or right-click and Save the page as PDF/Print -> Save as PDF.\nIf you want an automatic PNG generator, tell me and I can add it.');
    });
  </script>
