  <script>
    const messages = {
      simple: "Happy Birthday, sis! Wishing you all the happiness and success this year.",
      emotional: "To my amazing sister‚Äîmay your dreams come true this year. Love you forever.",
      funny: "HBD to my sister ‚Äî older, wiser, and still stealing my fries. Enjoy your day! üòÇ",
      poem: "Roses are red, violets are blue, there's no sister as sweet as you. Happy Birthday!"
    };

    const wishBox = document.getElementById('wishBox');
    const nameInput = document.getElementById('nameInput');
    const sisterName = document.getElementById('sisterName');

    document.querySelectorAll('.control-btn[data-msg]').forEach(btn=>{
      btn.addEventListener('click', ()=>{
        const key = btn.getAttribute('data-msg');
        wishBox.textContent = messages[key];
      });
    });

    document.getElementById('copyBtn').addEventListener('click', async ()=>{
      const text = wishBox.textContent.trim();
      try{
        await navigator.clipboard.writeText(text);
        alert('Wish copied! Paste it anywhere to share.');
      }catch(e){
        alert('Could not copy ‚Äî select the text and copy manually.');
      }
    });

    // update name live
    nameInput.addEventListener('input', ()=>{
      const v = nameInput.value.trim();
      sisterName.textContent = v || 'Sister';
    });

    // download simple PNG using html2canvas-like approach (fallback)
    document.getElementById('downloadBtn').addEventListener('click', ()=>{
      alert('To download as image: take a screenshot or right-click and Save the page as PDF/Print -> Save as PDF.\nIf you want an automatic PNG generator, tell me and I can add it.');
    });
  </script>
  <script>
    // Confetti animation
    const end = Date.now() + 3 * 1000;
    (function frame() {
      confetti({ particleCount: 3, angle: 60, spread: 55, origin: { x: 0 } });
      confetti({ particleCount: 3, angle: 120, spread: 55, origin: { x: 1 } });
      if (Date.now() < end) { requestAnimationFrame(frame); }
    }());
  </script>
  <script>
    // Confetti continuous
    setInterval(() => {
      confetti({ particleCount: 3, angle: 60, spread: 55, origin: { x: Math.random() } });
    }, 400);

    // Floating hearts
    setInterval(() => {
      const heart = document.createElement('div');
      heart.classList.add('heart');
      heart.style.left = Math.random() * 100 + 'vw';
      heart.textContent = '‚ù§Ô∏è';
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 4000);
    }, 600);

    // Balloons
    setInterval(() => {
      const balloon = document.createElement('div');
      balloon.classList.add('balloon');
      balloon.style.left = Math.random() * 100 + 'vw';
      balloon.textContent = 'üéà';
      document.body.appendChild(balloon);
      setTimeout(() => balloon.remove(), 6000);
    }, 1200);

    // Sparkles
    setInterval(() => {
      const s = document.createElement('div');
      s.classList.add('sparkle');
      s.style.left = Math.random() * 100 + 'vw';
      s.style.top = Math.random() * 100 + 'vh';
      document.body.appendChild(s);
      setTimeout(() => s.remove(), 2000);
    }, 300);

  </script>
  <script>
    // Background music
    const audio = new Audio('https://cdn.pixabay.com/download/audio/2022/03/15/audio_3a8a4b7f35.mp3?filename=hbd-116199.mp3');
    audio.loop = true;
    audio.volume = 0.4;
    setTimeout(()=>audio.play().catch(()=>{}), 1000);

    // Fireworks
    function createFirework() {
      for (let i = 0; i < 30; i++) {
        const fw = document.createElement('div');
        fw.classList.add('sparkle');
        fw.style.left = (50 + Math.random()*20 - 10) + 'vw';
        fw.style.top = (40 + Math.random()*20 - 10) + 'vh';
        fw.style.background = 'hsl(' + Math.random()*360 + ',100%,70%)';
        document.body.appendChild(fw);
        setTimeout(() => fw.remove(), 2000);
      }
    }
    setInterval(createFirework, 2500);

    // Floating Happy Birthday text
    setInterval(() => {
      const msg = document.createElement('div');
      msg.textContent = 'üéâ Happy Birthday Tashu! üéâ';
      msg.style.position = 'fixed';
      msg.style.left = Math.random()*100 + 'vw';
      msg.style.top = '100vh';
      msg.style.fontSize = '22px';
      msg.style.color = '#ffb3c6';
      msg.style.animation = 'floatUp 5s linear forwards';
      document.body.appendChild(msg);
      setTimeout(()=>msg.remove(), 5000);
    }, 1500);

  </script>
